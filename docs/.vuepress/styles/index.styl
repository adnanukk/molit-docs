// Navbar
.navbar {
    .site-name {
        background: url(https://vitu.molit.eu/favicons/android-chrome-256x256.png) left no-repeat;
        background-size: contain;
        padding-left: 2.5rem;
        padding-bottom: 0.2rem;
    }    
}

// Footer
footer.page-edit .last-updated .prefix {
    color: #004a6b;
}

// Print
@media print {
    @page {
        margin: 1.5cm;

        h1, h2, h3, h4, h5 {
            page-break-after: avoid;
        }
    }

    .navbar, .page-nav, aside {
        display: none;
    }

    footer.page-edit .last-updated .prefix, footer.page-edit .last-updated .time {
        color: black;
    }

    main {
        padding: 0;
        margin: 0;
        color: black;
    }

    p {
        text-align: justify;
    }

    .theme-default-content {
        padding: 0;
        margin: 0;
        max-width: auto;
    }

    a, a:visited {
        text-decoration: underline;
    }

    a[href]:after {
        content: ' (' attr(href) ')';
    }

    abbr[title]:after {
        content: ' (' attr(title) ')';
    }

    /*
     * Don't show links that are fragment identifiers,
     * or use the `javascript:` pseudo protocol
     */
    a[href^='#']:after, a[href^='javascript:']:after {
        content: '';
    }
}
