// Navbar
.navbar {
    .site-name {
        background: url('~@assets/img/icon.png') left no-repeat;
        background-size: contain;
        padding-left: 2.8rem;
    }
}

// Footer
footer.page-edit .last-updated .prefix {
    color: #004a6b;
}

// Fonts
@import url('https://fonts.googleapis.com/css?family=Lato|PT+Sans:400&display=swap');

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Lato', Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

h1, h2, h3, h4, h5, h6 {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'PT Sans', Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

// Print
@media print {
    @page {
        margin: 2cm;
    }

    body {
        font-size: 14px;
    }

    h1, h2, h3, h4, h5, h6 {
        page-break-after: avoid;
    }

    p {
        page-break-inside: avoid;
    }

    .theme-default-content h1:first-child {
        margin-top: 0 !important;
    }

    .navbar, .page-nav, aside, .edit-link {
        display: none;
    }

    footer.page-edit {
        margin-right: 0;
        margin-left: 0;
        padding-right: 0;
        padding-left: 0;
    }

    footer.page-edit .last-updated .prefix, footer.page-edit .last-updated .time {
        color: black;
    }

    main {
        padding: 0 !important;
        margin: 0 !important;
        color: black;
    }

    p {
        text-align: justify;
    }

    .theme-default-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: auto;
        position: relative;
    }

    a, a:visited {
        text-decoration: underline;
    }

    a[href]:after {
        content: ' (' attr(href) ')';
    }

    abbr[title]:after {
        content: ' (' attr(title) ')';
    }

    /*
     * Don't show links that are fragment identifiers,
     * or use the `javascript:` pseudo protocol
     */
    a[href^='#']:after, a[href^='javascript:']:after {
        content: '';
    }
}
